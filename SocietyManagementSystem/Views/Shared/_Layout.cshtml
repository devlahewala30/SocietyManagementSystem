@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Society Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f5f5;
        }

        .container-box {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 25px;
            margin-top: 30px;
        }

        .navbar-brand {
            font-weight: bold;
        }

        footer {
            margin-top: 50px;
            text-align: center;
            padding: 10px;
            background-color: #e9ecef;
            border-top: 1px solid #dee2e6;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg" style="background-color: #343a40;">
        <div class="container">
            <a class="navbar-brand text-white" asp-controller="User" asp-action="Dashboard">Society Portal</a>
            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="User" asp-action="Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Notice" asp-action="Index">Notices</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Complaint" asp-action="MyComplaints">Complaints</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Maintenance" asp-action="MyMaintenance">Maintenance</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Chat" asp-action="Index">Chat</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="User" asp-action="EditProfile">Edit Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-controller="User" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Main Content -->
    <div class="container container-box">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year - Society Management System</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
